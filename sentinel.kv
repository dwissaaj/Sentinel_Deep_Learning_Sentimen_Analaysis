#:import rgba kivy.utils.get_color_from_hex
WindowManager:
    MainWindow:
    prequisiteWindow:
    sentimentWindow:
    requirementWindow:
    modelWindow:


<MainWindow>
    name: "main"
    size : 100,500

    FloatLayout:
        orientation: "vertical"
        size: 500,500
        AnchorLayout:
            anchor_x : 'center'
            anchor_y : 'top'
            Image:
                source: 'image/image.png'
                size_hint: None,None
                size: 100, 150
                allow_stretch: True

    FloatLayout:
        orientation: "vertical"
        size : 250,250

        BoxLayout:
            orientation: "vertical"
            size: root.width,root.height
            pos_hint : {"x":0.01,"y":0.2}
            spacing : 25
            padding : 275,5

            Button:
                id: button_prequisite
                text:'Prerequisite'
                font_size:25
                size: 250, 50
                size_hint: None, None
                on_release :
                    app.root.current = "prequisite"
                    root.manager.transition.direction = "left"
            Button:
                id: button_sentiment
                text:'Sentiment'
                font_size:25
                size: 250, 50
                size_hint: None, None
                on_release :
                    app.root.current = "sentiment"
                    root.manager.transition.direction = "left"

            Button:
                id:button_requirement
                text:'Requirement'
                font_size:25
                size: 250, 50
                size_hint: None, None
                on_release :
                    app.root.current = "requirement"
                    root.manager.transition.direction = "left"

            Button:
                id:button_summary
                text:'Model Summary'
                font_size:25
                size: 250, 50
                size_hint: None, None
                on_release :
                    app.root.current = "model"
                    root.manager.transition.direction = "left"

    FloatLayout:
        orientation: "vertical"
        size: 500,500

        AnchorLayout:
            anchor_x : 'center'
            anchor_y : 'bottom'
            padding : 35,25

            Label:
                id: quotes
                markup: True
                text: "[color=000000]Sentiment Analysis with Deep Learning[color=000000] \n            [color=000000]Supported By[color=000000] [color=eb8934]Tensor[color=eb8934][color=030303]Flow[color=030303]"
                italic : True
                bold : True
                font_name : 'Georgia'
                font_size: 18
                size_hint: None, None
                color : [0, 0, 0, 1]




    FloatLayout:
        AnchorLayout:
            anchor_x: 'left'
            anchor_y: 'bottom'
            padding : 30,10
            Label:
                id: link
                font_size: 11
                markup: True
                size_hint: None, None
                text: '[b][i][color=000000]Ask For Help?[color=000000][/b][/i]\n[ref=some][color=0000ff]https://github.com/dwissaaj[/ref][color=0000ff] \n[b][i][color=000000]Or Contact Instagram[color=000000][/b][/i]\n[ref=some][color=0000ff]@dwisaji[/ref][color=0000ff]'
                on_ref_press:
                    import webbrowser
                    webbrowser.open('https://github.com/dwissaaj')



<prequisiteWindow>
    name : 'prequisite'
    FloatLayout:

        AnchorLayout:
            anchor_x : 'left'
            anchor_y : 'bottom'
            padding : 20,20
            Button:
                id:buttonback
                text:'<Back'
                font_size:20
                size: 100, 25
                background_color: rgba("#78879e")
                size_hint: None, None
                on_release :
                    app.root.current = "main"
                    root.manager.transition.direction = "right"
    FloatLayout:

        Label:
            text:"Something You need undestand about this machine work"
            font_size:25
            color : rgba("#000000")

<sentimentWindow>
    name : 'sentiment'
    FloatLayout:

        AnchorLayout:
            anchor_x : 'left'
            anchor_y : 'bottom'
            padding : 20,20
            Button:
                id:buttonback
                text:'<Back'
                font_size:20
                size: 100, 25
                background_color: rgba("#78879e")
                size_hint: None, None
                on_release :
                    app.root.current = "main"
                    root.manager.transition.direction = "right"
    FloatLayout:

        Label:
            text:"News Sentiment or Tweet Sentiment"
            font_size:25
            color : rgba("#000000")

<requirementWindow>
    name : 'requirement'
    FloatLayout:

        AnchorLayout:
            anchor_x : 'left'
            anchor_y : 'bottom'
            padding : 20,20
            Button:
                id:buttonback
                text:'<Back'
                font_size:20
                size: 100, 25
                background_color: rgba("#78879e")
                size_hint: None, None
                on_release :
                    app.root.current = "main"
                    root.manager.transition.direction = "right"
    FloatLayout:

        Label:
            text:"This App only read excel file"
            font_size:25
            color : rgba("#000000")
    ScrollView:
        Label:
            text:"To Use This you need to have excel file containt your text" * 50
            font_size : 15
            size_hint_x : 0.5
            size_hint_y : 0.5
            text_size : self.width,None
            height : self.texture_size[1]
            pos_hint : {"x":0.5,"y":0.5}


<modelWindow>
    name : 'model'
    FloatLayout:

        AnchorLayout:
            anchor_x : 'left'
            anchor_y : 'bottom'
            padding : 20,20
            Button:
                id:buttonback
                text:'<Back'
                font_size:20
                size: 100, 25
